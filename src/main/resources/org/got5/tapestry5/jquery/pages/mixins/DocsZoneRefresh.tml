	  t:title="ZoneRefresh"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" 
	  xmlns:p="tapestry:parameter">
    
     	
    <t:jquery.tabs  t:tabs="docs,example" t:activePanelId="0" t:ajax="false">
    	 <p:docs>
	    	<t:componentDocumentation>
				<p:title>
					Zone Refresh
				</p:title>
				<p:description>
					This mixin allows you to update a zone with a period. This mixin use the title attribute of your element
				</p:description>
				
				<p:link_1><t:componentLink t:url="http://access.aol.com/csun2011"/></p:link_1>
			</t:componentDocumentation>
		</p:docs>
	    
	    <p:example>
	    	<div t:type='zone' id="clickZone" t:mixins='jquery/zonerefresh' t:period='1'>${now} </div>
	    	<p><a id="start">Start Refreshing</a></p>
	    	<p><a id="stop">Stop Refreshing</a></p>

<html t:type="layoutWithAccordion" 
t:title="jQuery Tabs" 
t:activeElement="1" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
   
<t:jquery.tabs  t:tabs="docs,example" t:activePanelId="tabIndex" t:ajax="false">

	<p:docs>
		<t:componentDocumentation>
			<p:title>
				Tabs Component
			</p:title>
			<p:description>
				This component allows you create a jquery ui tab. 
			</p:description>
			
			<p:link_1><t:componentLink t:url="http://jqueryui.com/demos/tabs/"/></p:link_1>
			
			<p:param_1>
				<t:componentParameter
					t:name="listTabData"
					t:required="true"
					t:javaType="ArrayList of JQueryTabData"
					t:prefix="prop"
					t:description="A list of JQueryTabData (object containing the title of the tab and the name of the block that has the content). "
				/>
			</p:param_1>
			<p:param_2>
				<t:componentParameter
					t:name="activePanelId"
					t:required="true"
					t:javaType="Int"
					t:prefix="prop"
					t:description="The number of the tab to activate when the page is displayed on the client. "
				/>
			</p:param_2>
			<p:param_3>
				<t:componentParameter
					t:name="params "
					t:required="false"
					t:javaType="JSONObject"
					t:prefix="prop"
					t:description="The Tabs parameters (please refer to jquery-ui documentation). "
				/>
			</p:param_3>
		</t:componentDocumentation>
	</p:docs>
	
	<p:example>
<t:jquery.tabs  t:tabs="TabsDemoTabs1,TabsDemoTabs2,TabsDemoTabs3,TabsDemoTabs4" 
	t:activePanelId="1">
	
	<p:TabsDemoTabs1>
		<h3>Panel 1</h3>
		<hr/>
		content from block 1
	</p:TabsDemoTabs1>
	
	<p:TabsDemoTabs2>
		<h3>Panel 2</h3>
		<hr/>	
		content from block 2
	</p:TabsDemoTabs2>
	
	<p:TabsDemoTabs3>
		<h3>Panel 3</h3>
		<hr/>
		content from block 3
	</p:TabsDemoTabs3>
	
	<p:TabsDemoTabs4>
		<h3>Panel 4</h3>
		<hr/>
		content from block 4
		<t:form>
			<t:datefield value="sysDate"/>
			<input type="submit"/>
		</t:form>
	</p:TabsDemoTabs4>
</t:jquery.tabs>

	<div t:type="jquery/showSource" t:ext="html" t:beginLine="49" t:endLine="79" t:path="resources/org/got5/tapestry5/jquery/pages/components/DocsJQueryTabs.tml"></div>      		
    <div t:type="jquery/showSource" t:ext="java" t:beginLine="30" t:endLine="39" t:path="java/org/got5/tapestry5/jquery/pages/components/DocsJQueryTabs.java"></div>
			
	</p:example>
</t:jquery.tabs>
</html>